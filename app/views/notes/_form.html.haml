= form_for(@note) do |f|
  - if @note.errors.any?
    #error_explanation
      %h2
        = pluralize(@note.errors.count, "error")
        prohibited this note from being saved:
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :date
    %br/
    = f.text_field :date, value: Date.today
  .field
    = f.label :done?
    %br/
    = f.check_box :done
  .field
    = f.label :notes
    %br/
    = f.text_area :notes
  .actions
    = f.submit
